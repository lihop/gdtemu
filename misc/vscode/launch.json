    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pc (gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/run/current-system/sw/bin/godot",
            "args": [
                "${workspaceFolder}/examples/pc/pc.tscn",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true,
                },
            ],
        },
        {
